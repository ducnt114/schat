style.
  body {
    min-height: 2000px;
    padding-top: 70px;
    background-color: #e4dbff;
  }

nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      a(href='#' class='navbar-brand') Stranger Chat
    div(id='navbar' class='navbar-collapse collapse')
      ul.nav.navbar-nav.navbar-right
        li
          a(href='#' onclick='loadLoginPage()') Đăng nhập
        li
          a(href='#' onclick='loadForgotPasswordPage()') Quên mật khẩu

.container
  .row
    .col-md-8
      .box.box-info
        div(class="box-header with-border")
          h3(class="box-title") Thông tin đăng kí
        form(class="form-horizontal")
          div(class="box-body")
            div(class="form-group")
              label(class="col-sm-2 control-label") Số điện thoại
              div(class="col-sm-10")
                input(type="text" class="form-control" id="idPhoneNumber" name='phoneNumber')
            div(class="form-group")
              label(class="col-sm-2 control-label") Họ đệm
              div(class="col-sm-4")
                input(type="text" class="form-control" id="idFirstName" name='firstName')
              label(class="col-sm-2 control-label") Tên
              div(class="col-sm-4")
                input(type="text" class="form-control" id="idLastName" name='lastName')
            div(class="form-group")
              label(class="col-sm-2 control-label") Email
              div(class="col-sm-10")
                input(type="email" class="form-control" id="idEmail" name='email')
            div(class="form-group")
              label(class="col-sm-2 control-label") Mật khẩu
              div(class="col-sm-10")
                input(type="password" class="form-control" id="idPassword" name='password')
            div(class="form-group")
              label(class="col-sm-2 control-label") Thành phố
              div(class="col-sm-10")
                input(type="text" class="form-control" id="idCity" name='city')
            div(class="form-group")
              label(class="col-sm-2 control-label") Ngày sinh
              div(class="col-sm-4")
                input(type="date" class="form-control" id="idBirthDay" name='birthday')
              label(class="col-sm-2 control-label") Giới tính
              div(class="col-sm-4")
                select(class="form-control" id='idGender' name='gender')
                  option(value='male') Nam
                  option(value='female')  Nữ
                  option(value='male-')  Nam-
                  option(value='female+') Nữ+
            div(class="form-group")
              div(class="col-sm-6 col-sm-offset-2")
                div(class="checkbox")
                  label
                    input(type="checkbox" id='idAgree')
                    | &nbsp Tôi đồng ý với các điều khoản sử dụng trên website
          div(class="box-footer")
            div(class="col-sm-3 col-sm-offset-2")
              a(href='#' class='btn btn-primary btn-lg' onclick='register()')  Đăng kí

script(src="/javascripts/register.js")