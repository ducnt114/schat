.row#allChatBox
  .col-xs-12
    .box.box-primary.direct-chat.direct-chat-primary
      .box-header.with-border
        h3.box-title #{destUser}
        .box-tools.pull-right
          a(href='#' class='btn btn-box-tool' onclick='reportUser()') Report
          a(href='#' class='btn btn-box-tool' onclick='leaveChat()') Kết thúc trò chuyện
      .box-body#boxbody
        .direct-chat-messages#messagebox
      .box-footer
        .input-group
          input(type='text' name='message' placeholder='Type message...' class='form-control' id='msgContent' onkeypress='onInputKeyPress(event)')
          input(type='hidden' name='destUserId' id='destUserId' value='#{destUser}')
          input(type='hidden' name='selfAvatarUrlId' id='selfAvatarUrlId' value='#{selfUrl}')
          input(type='hidden' name='friendAvatarUrlId' id='friendAvatarUrlId' value='#{friendUrl}')
          input(type='hidden' name='finalChatId' id='finalChatId' value='-1')
          span(class='input-group-btn')
            a(class='btn btn-primary btn-flat' href='#' onclick='sendMessage()') Send

script(src='/javascripts/chat.js')